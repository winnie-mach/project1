  <%= button_to 'Add to Favourites', work_favourite_path(@work), :method => :put %> <%# put request means changing the existing data %>
  <%# else %>
<%= button_to 'Remove from Favourites', work_favourite_path(@work), :method => :delete %>
  <%# end %>

<% if @current_user.id === @work.user.id %>
<div class="controls">
  <%= link_to 'Edit Work', edit_work_path(@work) %>
  <%= link_to 'Delete Work', @work, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
</div>
<% end %>
