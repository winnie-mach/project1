<h1>Edit Profile</h1>

<% if @user.errors.any? %>
<ol>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg.capitalize %></li>
  <% end %>
</ol>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email, :placeholder => 'hello@ga.com.au', :autofocus => true %>

  <%= f.label :name %>
  <%= f.text_field :name, :placeholder => 'John' %>

  <%= f.label :surname %>
  <%= f.text_field :surname, :placeholder => 'Citizen' %>

  <%= f.label :role %>
  <%= f.text_field :role, :placeholder => 'Alumini' %>

  <%= f.label :field, 'Subjects Studied'%>
  <%= f.text_field :field, :placeholder => 'Drawing' %>

  <%= f.label :hobbies %>
  <%= f.text_area :hobbies, :placeholder => 'Singing, Piano'%>

  <%= f.label :phone %>
  <%= f.number_field :phone, :placeholder => '0499192019' %>

  <%= f.label :image %>
  <%= f.url_field :image, :placeholder => 'http://...'%>

  <%= f.label :password, 'Change Password'%>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, 'Re-enter new Password' %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit 'Update Profile' %>
<% end %>
