<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', root_path %>
      <% if @current_user.present? %>
      <%= link_to 'Student Works', works_path %>
      <%= link_to 'My Profile', @current_user %> <%# @current_user will go to the @current user's show page. Magic. %>
      <%= link_to 'Add Work', new_work_path %>
      <%= link_to "Sign Out #{@current_user.name}", login_path, :method => 'delete' %>
      <% else %>
      <%= link_to 'Sign Up', new_user_path %>
      <%= link_to 'Sign In', login_path %>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
