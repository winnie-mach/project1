<h1>Log in</h1>

<h2><%= flash[:error] %></h2>
<%= form_tag login_path do %> <%# can't use helpers for a form_tag, only a form_for so have to write manually %>
<%= label_tag :email %>
<%= email_field_tag :email %>
<%= label_tag :password %>
<%= password_field_tag :password %>

<%= submit_tag 'Log in' %>
<% end %>
