<div class="container">
  <%= form_for(@work, :html => { :multipart => true }) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :placeholder => 'Title of work', :autofocus => true, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :field, 'Subject Area' %>
    <%= f.text_field :field, :placeholder => 'Data Science', :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :placeholder => 'Brief description of your work',:class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :tools %>
    <%= f.text_field :tools, :placeholder => 'Pencils, Photoshop etc', :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :hours %>
    <%= f.number_field :hours, :placeholder => 'How many hours were spent?', :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, :placeholder => 'Links to any screenshots or pictures', :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'form-control button' %>
  </div>
  <% end %>
</div>
