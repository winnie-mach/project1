<h1><%= @work.title %></h1>

<% unless @work.image.empty? %>
<%= image_tag @work.image, :alt => @work.title, :title => @work.title, :class => 'feature' %>
<%end %>

<% unless @work.user.nil? %>
<p>Creator: <%= link_to @work.user.name, @work.user %></p>
<% end %>
<p>Description: <%= @work.description %></p>
<p>Field: <%= @work.field %></p>
<p>Hours: <%= @work.hours %></p>
<p>Tools: <%= @work.tools %></p>
<%# TODO: Hide/show fav buttons %>
